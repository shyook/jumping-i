<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/items_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/items_name"
        app:layout_constraintTop_toTopOf="@id/items_name"
        app:layout_constraintBottom_toBottomOf="@id/itmes_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/items_name"
        app:layout_constraintStart_toEndOf="@id/items_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itmes_detail"
        app:layout_constraintTop_toTopOf="@id/items_photo"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1"
        android:text="홍길동"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itmes_detail"
        app:layout_constraintStart_toEndOf="@id/items_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/items_name"
        app:layout_constraintBottom_toBottomOf="@id/items_photo"
        app:layout_constraintVertical_weight="1"
        android:text="010-1111-2222"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>